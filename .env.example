# CTF Application Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Flask secret key - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_super_secret_key_change_this_in_production

# Environment (development, production, testing)
FLASK_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (recommended for production)
DATABASE_URL=postgresql://ctfuser:your_db_password@localhost:5432/ctfdb

# PostgreSQL credentials (for Docker Compose)
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_USER=ctfuser
POSTGRES_DB=ctfdb

# Alternative: MySQL Database
# DATABASE_URL=mysql+pymysql://ctfuser:your_db_password@localhost:3306/ctfdb
# MYSQL_USER=ctfuser
# MYSQL_PASSWORD=your_db_password
# MYSQL_HOST=localhost
# MYSQL_DB=ctfdb

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP server settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USE_SSL=0

# Email credentials
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Default admin user (created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CSRF protection
WTF_CSRF_ENABLED=1
WTF_CSRF_TIME_LIMIT=3600

# Session security
SESSION_COOKIE_SECURE=1
SESSION_LIFETIME=86400

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum upload size in MB
MAX_UPLOAD_MB=16

# Upload directory
UPLOAD_FOLDER=/app/uploads

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/app/logs/ctf.log

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of Gunicorn workers
WORKERS=4

# Worker class
WORKER_CLASS=gevent

# Worker connections
WORKER_CONNECTIONS=1000

# =============================================================================
# DOMAIN AND HOSTING
# =============================================================================

# Your domain name
DOMAIN_NAME=yourdomain.com

# Port for the application
PORT=8000

# =============================================================================
# ENCRYPTION
# =============================================================================

# Fernet encryption key
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================

# [ ] Change all default passwords
# [ ] Set strong SECRET_KEY
# [ ] Configure proper SSL certificates
# [ ] Set up database backups
# [ ] Configure monitoring and alerting
# [ ] Test email notifications
# [ ] Verify security headers
# [ ] Set up log rotation
# [ ] Configure firewall rules
# [ ] Test disaster recovery